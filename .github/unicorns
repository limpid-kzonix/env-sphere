pull_request_rules:
  - name: Merge PRs that are ready
    conditions:
      - "#review-requested=0"
      - "#approved-reviews-by>=1"
      - label!=block-merge
      - label=dependencies
    actions:
      merge:
        strict: true
        strict_method: rebase
        method: squash

  - name: Delete the merge-when-green label after merge
    conditions:
      - merged
      - label=block-merge
    actions:
      label:
        remove: [block-merge]
  - name: Delete the PR branch after merge
    conditions:
      - merged
    actions:
      delete_head_branch:
